{
  "name": "Schoology Tweaks",
  "description": "Makes Schoology look a bit better in my opinion.",
  "version": "0.1.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "scripting"],

  "content_scripts": [
    {
      "css": ["./schoology/schoology-style.css"],
      "js": ["./schoology/schoology.js"],
      "matches": ["https://*.schoology.com/*"],
      "use_dynamic_url": true
    }
  ],

  "action": {
    "default_title": "Schoology Tweaks",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
